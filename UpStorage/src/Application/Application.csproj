<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Domain\Domain.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="FluentValidation" Version="11.5.2" />
      <PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="11.5.2" />
      <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.4" />
      <PackageReference Include="Microsoft.Extensions.Localization" Version="7.0.5" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Features\Auth\Common" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Resources\Common\Localizations\CommonLocalizations.en-GB.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>CommonLocalizations.en-GB.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Common\Localizations\CommonLocalizations.tr-TR.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>CommonLocalizations.tr-TR.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Resources\Common\Localizations\CommonLocalizations.en-GB.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>CommonLocalizations.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Common\Localizations\CommonLocalizations.tr-TR.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>CommonLocalizations.tr-TR.resx</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
